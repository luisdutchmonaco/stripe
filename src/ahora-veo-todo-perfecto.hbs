$(document).ready(function(){
  var userLang = navigator.language || navigator.userLanguage;
  if(userLang.startsWith("fr")) {
                  //    window.location.href = '../fr/index.html';
  }  else {
                    //  window.location.href = '../en/index.html';
      }

  $("a.onClickNav").click(function(){
    $(this).toggleClass("active");
    if($("#modal").is(":visible")){ $(".menu a").removeClass("active"); $("#modal").fadeOut(); $(".nav").removeClass("open").hide(); return;  }
    if($(".nav").is(":visible")){ $(".nav").removeClass("open").fadeOut(); }else { $(".nav").addClass("open").fadeIn(); }
  });

  $("a.closeGallery").click(function(){
    $("#gallery").fadeOut();
  });


  $("a.onClickGallery").click(function(){
    var idx = $(this).data("idx");
    $("#gallery .slider").css('opacity',0);
    var mySwiper3 = new Swiper('.swiper-container.overlay', {
      direction: 'horizontal',
      loop: false,
      slidesPerView : 1,
      initialSlide: idx,
      spaceBetween : 15,
      navigation: { nextEl: '#gallery .sw-next', prevEl: '#gallery .sw-prev' },
    });
    mySwiper3.on('init',function(){ $('#gallery .sw-prev').hide(); });
    mySwiper3.on('slideChange', function () {
      if (mySwiper3.activeIndex==0) {
        $('#gallery .sw-prev').hide()
      }else if ((mySwiper3.activeIndex+1) == mySwiper3.slides.length) {
        $('#gallery .sw-prev').show()
        $('#gallery .sw-next').hide()
      }else {
        $('#gallery .sw-prev').show()
        $('#gallery .sw-next').show()
      }
    });


    $("#gallery").fadeIn(function(){
      mySwiper3.update();
      if(idx==0){ $('#gallery .sw-prev').hide(); }
      if(idx>0){ $('#gallery .sw-next').show(); }
      if(idx==(mySwiper3.slides.length-1)){
        $('#gallery .sw-next').hide();
        $('#gallery .sw-prev').show();
      };
      $("#gallery .slider").css('opacity',1);
    });
  });


$("a.close").click(function(){
